{
  "manifest_version": 3,
  "name": "PR Helper - Task Extractor",
  "version": "1.0.0",
  "description": "Extracts unique task IDs from GitHub PR commits",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons8-github-16.png",
      "100": "icons8-github-100.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/pull/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons8-github-16.png",
    "100": "icons8-github-100.png"
  }
}

